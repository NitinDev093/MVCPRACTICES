                StudentAge: $("#studentag").val(),
                StudentQual: $("#studentqu").val(),
                StudentGender: $("#studentge").val(),
                Id: $("#hiddenidd").val(),
                CountryId: $("#ddlcountryupdate").val(),
                StateId: $("#ddlstateupdate").val(),
            }),
